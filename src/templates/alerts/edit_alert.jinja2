{%extends "base.jinja2" %} {% block content %}

<div class="page-header">
    <h1>Edit Alert</h1>
</div>
<div class="form-size">
    <form method="post">
        <div class="form-group">
            <label for="name">Alert/Item Name</label>
            <input type="text" class="form-control disabled" id="name" name="name" placeholder="name" disabled>
        </div>
        <div class="form-group">
            <label for="url">URL</label>
            <input type="text" class="form-control disabled" id="url" name="url" placeholder="http://..." disabled>
        </div>
        <div class="form-group">
            <label for="price_limit">Alert Limit</label>
            <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="45.0" value={{alert.price_limit}} aria-describedby="priceLimitBlock">
            <p id="priceLimitBlock" class="help-block">We'll send you an e-mail when the price reaches this price.</p>
        </div>
        <button type = "submimt" class="btn btn-primary">Update</button>
    </form>
</div>
{% endblock %}